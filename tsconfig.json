{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2020", "WebWorker"],
        "rootDir": ".",
        "module": "NodeNext",
        "paths": {
            "@/*": ["./src/*"]
        },
        "strict": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "skipLibCheck": true
    },
    "include": ["**/*.ts"],
    "exclude": ["samples", "node_modules", ".vscode-test"]
}
