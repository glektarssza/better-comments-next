{
    "publisher": "glektarssza",
    "name": "glek-better-comments-next",
    "displayName": "G'lek's Better Comments Next",
    "version": "3.4.7",
    "description": "Improve your code commenting by annotating with alert, informational, TODOs, and more!",
    "author": {
        "name": "G'lek Tarssza",
        "email": "glek@glektarssza.com",
        "url": "https://glektarssza.com"
    },
    "sponsor": {
        "url": "https://github.com/sponsors/glektarssza"
    },
    "license": "MIT",
    "homepage": "https://github.com/glektarssza/better-comments-next",
    "repository": {
        "type": "git",
        "url": "https://github.com/glektarssza/better-comments-next"
    },
    "bugs": "https://github.com/glektarssza/better-comments-next/issues",
    "keywords": [
        "highlight",
        "color",
        "comment",
        "comments",
        "todo",
        "todos",
        "todo-list",
        "todo-lists",
        "todo-tree"
    ],
    "categories": [
        "Formatters"
    ],
    "main": "./dist/extension.js",
    "icon": "static/icon.png",
    "browser": "./dist/extension.web.js",
    "engines": {
        "vscode": "^1.65.0"
    },
    "extensionKind": [
        "workspace"
    ],
    "activationEvents": [
        "onLanguage"
    ],
    "galleryBanner": {
        "color": "#e3f4ff",
        "theme": "light"
    },
    "contributes": {
        "configuration": {
            "title": "G'lek's Better Comments Next",
            "properties": {
                "better-comments.highlightPlainText": {
                    "type": "boolean",
                    "description": "Whether the plaintext comment highlighter should be active",
                    "default": false
                },
                "better-comments.tags": {
                    "type": "array",
                    "description": "Tags which are used to color the comments.",
                    "items": {
                        "type": "object",
                        "title": "tag item",
                        "properties": {
                            "tag": {
                                "type": [
                                    "string",
                                    "array"
                                ],
                                "description": "Name of tag, case insensitive, could be string or string[]",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "color": {
                                "type": "string",
                                "description": "Font color, eg: #FF2D00"
                            },
                            "strikethrough": {
                                "type": "boolean",
                                "description": "Enable text strikethrough."
                            },
                            "underline": {
                                "type": "boolean",
                                "description": "Enable text underline."
                            },
                            "backgroundColor": {
                                "type": "string",
                                "description": "Background color, eg: transparent"
                            },
                            "bold": {
                                "type": "boolean",
                                "description": "Set text font style to bold."
                            },
                            "italic": {
                                "type": "boolean",
                                "description": "Set text font style to italic."
                            },
                            "multiline": {
                                "type": "boolean",
                                "description": "Enable multiline comments decoration until reach blank line."
                            }
                        }
                    },
                    "default": [
                        {
                            "tag": "#",
                            "color": "#18b566",
                            "strikethrough": false,
                            "underline": false,
                            "backgroundColor": "transparent",
                            "bold": true,
                            "italic": false
                        },
                        {
                            "tag": "!",
                            "color": "#FF2D00",
                            "strikethrough": false,
                            "underline": false,
                            "backgroundColor": "transparent",
                            "bold": false,
                            "italic": false
                        },
                        {
                            "tag": "?",
                            "color": "#3498DB",
                            "strikethrough": false,
                            "underline": false,
                            "backgroundColor": "transparent",
                            "bold": false,
                            "italic": false
                        },
                        {
                            "tag": "//",
                            "color": "#474747",
                            "strikethrough": true,
                            "underline": false,
                            "backgroundColor": "transparent",
                            "bold": false,
                            "italic": false
                        },
                        {
                            "tag": [
                                "todo",
                                "to-do"
                            ],
                            "color": "#FF8C00",
                            "strikethrough": false,
                            "underline": false,
                            "backgroundColor": "transparent",
                            "bold": false,
                            "italic": false,
                            "multiline": true
                        },
                        {
                            "tag": "*",
                            "color": "#98C379",
                            "strikethrough": false,
                            "underline": false,
                            "backgroundColor": "transparent",
                            "bold": false,
                            "italic": false
                        },
                        {
                            "tag": "bug",
                            "color": "#E84393",
                            "strikethrough": false,
                            "underline": true,
                            "backgroundColor": "#FDA7DF20",
                            "bold": true,
                            "italic": false
                        },
                        {
                            "tag": "hack",
                            "color": "#9B59B6",
                            "strikethrough": false,
                            "underline": false,
                            "backgroundColor": "#9B59B620",
                            "bold": true,
                            "italic": true
                        },
                        {
                            "tag": [
                                "fixme",
                                "fix-me",
                                "fix"
                            ],
                            "color": "#FD79A8",
                            "strikethrough": false,
                            "underline": false,
                            "backgroundColor": "#FD79A820",
                            "bold": true,
                            "italic": false
                        }
                    ]
                },
                "better-comments.tagsLight": {
                    "type": "array",
                    "description": "Overwrite tags options for light themes",
                    "items": {
                        "type": "object",
                        "title": "tag item",
                        "properties": {
                            "tag": {
                                "type": [
                                    "string",
                                    "array"
                                ],
                                "description": "Name of tag, case insensitive, could be string or string[]",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "color": {
                                "type": "string",
                                "description": "Font color, eg: #FF2D00"
                            },
                            "strikethrough": {
                                "type": "boolean",
                                "description": "Enable text strikethrough."
                            },
                            "underline": {
                                "type": "boolean",
                                "description": "Enable text underline."
                            },
                            "backgroundColor": {
                                "type": "string",
                                "description": "Background color, eg: transparent"
                            },
                            "bold": {
                                "type": "boolean",
                                "description": "Set text font style to bold."
                            },
                            "italic": {
                                "type": "boolean",
                                "description": "Set text font style to italic."
                            }
                        }
                    },
                    "default": []
                },
                "better-comments.tagsDark": {
                    "type": "array",
                    "description": "Overwrite tags options for dark themes",
                    "items": {
                        "type": "object",
                        "title": "tag item",
                        "properties": {
                            "tag": {
                                "type": [
                                    "string",
                                    "array"
                                ],
                                "description": "Name of tag, case insensitive, could be string or string[]",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "color": {
                                "type": "string",
                                "description": "Font color, eg: #FF2D00"
                            },
                            "strikethrough": {
                                "type": "boolean",
                                "description": "Enable text strikethrough."
                            },
                            "underline": {
                                "type": "boolean",
                                "description": "Enable text underline."
                            },
                            "backgroundColor": {
                                "type": "string",
                                "description": "Background color, eg: transparent"
                            },
                            "bold": {
                                "type": "boolean",
                                "description": "Set text font style to bold."
                            },
                            "italic": {
                                "type": "boolean",
                                "description": "Set text font style to italic."
                            }
                        }
                    },
                    "default": []
                },
                "better-comments.languages": {
                    "type": "array",
                    "description": "List of languages that missing comments definition.",
                    "items": {
                        "type": "object",
                        "title": "language item",
                        "required": [
                            "id"
                        ],
                        "properties": {
                            "id": {
                                "type": "string",
                                "description": "The language id"
                            },
                            "comments": {
                                "type": "object",
                                "description": "The comment definition",
                                "properties": {
                                    "lineComment": {
                                        "type": "string",
                                        "description": "The line comment token, like `//`",
                                        "examples": [
                                            "//"
                                        ]
                                    },
                                    "blockComment": {
                                        "type": "array",
                                        "maxItems": 2,
                                        "minItems": 2,
                                        "description": "The block comment character pair, like `/*` `*/`",
                                        "examples": [
                                            "/*",
                                            "*/"
                                        ]
                                    }
                                }
                            },
                            "useDocComment": {
                                "type": "boolean",
                                "description": "Whether the language use doc comment",
                                "default": true
                            },
                            "embeddedLanguages": {
                                "type": "array",
                                "description": "List of embedded language ids",
                                "items": {
                                    "type": "string",
                                    "description": "The embedded language id"
                                }
                            }
                        }
                    }
                },
                "better-comments.updateDelay": {
                    "type": "number",
                    "description": "Millisecond delay for update decorations, default 0",
                    "default": 0
                },
                "better-comments.preloadLines": {
                    "type": "number",
                    "description": "Preload lines outside the visible window for better performance, default 100",
                    "default": 100
                },
                "better-comments.fullHighlight": {
                    "type": "boolean",
                    "description": "Highlight entire line of line comment",
                    "default": false
                },
                "better-comments.strict": {
                    "type": "boolean",
                    "description": "Strict mode of tag. default true.",
                    "default": true
                }
            }
        }
    },
    "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a",
    "scripts": {
        "clean:dist": "del-cli ./dist/",
        "vscode:prepublish": "pnpm run package",
        "package": "pnpm run clean:dist && pnpm run lint && npm run build && npm run build-web",
        "build": "tsup --config=build/tsup.node.js",
        "watch": "tsup --config=build/tsup.node.js --watch",
        "build-web": "tsup --config=build/tsup.web.js",
        "watch-web": "tsup --config=build/tsup.web.js --watch",
        "lint": "pnpm run lint:type && pnpm run lint:eslint && pnpm run lint:prettier",
        "lint:type": "tsc -p . --noEmit",
        "lint:eslint": "eslint --cache --max-warnings 0 .",
        "lint:prettier": "prettier --cache --config ./.prettierrc.cjs --ignore-path ./.prettierignore --ignore-path ./.gitignore --check .",
        "lint:ci": "pnpm run lint:ci:type && pnpm run lint:ci:eslint && pnpm run lint:ci:prettier",
        "lint:ci:type": "tsc -p . --noEmit",
        "lint:ci:eslint": "eslint --max-warnings 0 .",
        "lint:ci:prettier": "prettier --config ./.prettierrc.cjs --ignore-path ./.prettierignore --ignore-path ./.gitignore --check .",
        "lint:fix": "pnpm run lint:fix:type && pnpm run lint:fix:eslint && pnpm run lint:fix:prettier",
        "lint:fix:type": "exit 0",
        "lint:fix:eslint": "eslint --cache --max-warnings 0 --fix .",
        "lint:fix:prettier": "prettier --cache --config ./.prettierrc.cjs --ignore-path ./.prettierignore --ignore-path ./.gitignore --write ."
    },
    "dependencies": {
        "json5": "^2.2.3"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^3.11.2",
        "@types/node": "^17.0.23",
        "@types/vscode": "^1.65.0",
        "del-cli": "^7.0.0",
        "eslint": "^9.16.0",
        "lint-staged": "^15.1.0",
        "path-browserify": "^1.0.1",
        "process": "^0.11.10",
        "tsup": "^8.0.2",
        "typescript-eslint": "^8.48.0",
        "typescript": "^5.5.4"
    }
}
